<layout name="Public/frontend_template"/>
<div class="container" style="width:350px; margin-top:40px">
    <div class="register_block">
        <form class="login_form validator" action="/register/submit_forget_password" method="post">
            <h4>找回密码</h4>
            <hr />
            <table>
                <tr><td style="line-height:30px">邮　箱　</td><td><input type="text"  require="true" datatype="email"  msg="邮箱格式不正确" vname="signupemail"  placeholder="您的登录/注册邮箱" name="email" id="email" class="input-block-level" style="width:224px"></td></tr>
                <tr>
                    <td style="line-height:30px" nowrap>验证码　</td>
                    <td>{:captcha_image()}</td>
                </tr>
            </table>
            <div class="clear"></div>
            <button class="btn btn-success" style="width:100%; margin-top:10px"  type="submit">下一步</button>
        </form>
    </div>
</div>
